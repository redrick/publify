<%- content_for :page_heading do %>
<h2>
  <i class="glyphicon glyphicon-large glyphicon-share-alt"></i>
  <%= _("Redirects") %>
</h2>
<% end %>

<div class='row'>
  <div class='col-md-4'>
    <%= form_tag :action=>"edit", :id => @redirect.id do %>
      <%= error_messages_for 'redirect' %>
      <div class='form-group'>
        <%= text_field :redirect, :from_path, class: 'form-control', placeholder: "#{_("From")} #{this_blog.base_url}/" %>
      </div>
      <p class='help-block'>
        <small><%= _("Leave empty to shorten a link") %></small>
      </p>
      <div class='form-group'>
        <%= text_field :redirect, :to_path, :class => 'form-control', placeholder: _("To") %>
      </div>
      <div class='form-group'>
        <%= cancel_or_save %>
      </div>
    <% end %>
  </div>

  <div class='col-md-8'>
    <table class="table table-hover">
      <thead>
        <tr class='noborder'>
          <th><%= _("From") %></th>
          <th><%= _("To") %></th>
        </tr>
      </thead>
      <%= render_void_table(@redirects.size, 2)  %>
      <% for redirect in @redirects %>
        <tr>
          <td>
            <%= link_to("#{redirect.to_url}", "#{redirect.to_url}") %>
            <%= show_redirect_actions redirect %>
          </td>
          <td><%= link_to(redirect.to_path, redirect.to_path) %></td>
        </tr>
      <% end %>
      <%= display_pagination(@redirects, 2)%>
    </table>
  </div>
</div>
