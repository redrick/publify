<%- content_for :page_heading do %>
  <h2>
    <i class="glyphicon glyphicon-large glyphicon-tags"></i>
    <%= _("Manage tags") %>
  </h2>
<% end %>

<div class='row'>
  <div class='col-md-4'>
    <%= form_tag :action=>"edit", :id => @tag.id do %>
    <%= error_messages_for 'tag' %>
    <div class='form-group'>
      <%= text_field :tag, :display_name, class: 'form-control', placeholder: _("Name") %>
    </div>
    <div class='form-group'>
      <%= cancel_or_save %>
    </div>
    <% end %>
  </div>
  <div class='col-md-8'>
    <table class="table table-hover">
      <thead>
        <tr class='noborder'>
        <th><%= _("Display Name") %></th>
        <th><%= _("Name") %></th>
        <th><%= _("Articles") %></th>
      </tr>
      </thead>
      <%= render_void_table(@tags.size, 3)  %>
      <% for tag in @tags %>
      <tr>
        <td>
          <%= link_to_edit tag.display_name, tag %>
          <%= show_tag_actions tag %>
        </td>
        <td><%= tag.name %></td>
        <td><%= tag.published_articles.count.to_s %></td>
      </tr>
      <% end %>
      <%= display_pagination(@tags, 3)%>
    </table>
  </div>
</div>

