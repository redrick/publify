<%= error_messages_for 'user' %>

<fieldset class='form-horizontal'>
  <legend><%= _("Account settings")%></legend>
  <div class='form-group'>
    <label class='control-label col-sm-2' for="user_login"><%= _("Login")%></label>
    <div class="col-sm-4">
      <%= text_field('user', 'login', {:class => 'form-control'}) %>
    </div>
  </div>
  <div class='form-group'>
    <label class='control-label col-sm-2' for="user_password"><%= _("Password")%></label>
    <div class='col-sm-4'>
      <%= password_field('user', 'password', {:class => 'form-control'}) %>
    </div>
  </div>
  <div class='form-group'>
    <label class='control-label col-sm-2' for="user_password_confirmation"><%= _("Password confirmation")%></label>
    <div class='col-sm-4'>
      <%= password_field('user', 'password_confirmation', {:class => 'form-control'})  %>
    </div>
  </div>
  <div class='form-group'>
    <label class='control-label col-sm-2' for="user_email"><%= _("Email")%></label>
    <div class='col-sm-4'>
      <%= text_field('user', 'email', {:class => 'form-control'})  %>
    </div>
  </div>
  <% if controller.controller_name == 'users' %>
  <div class='form-group'>
    <label class='control-label col-sm-2' for="user_profile"><%= _("Profile")%></label>
    <div class='col-sm-4'>
      <%=  select("user", "profile_id", @profiles.collect {|p| [ _(p.nicename), p.id ] }, { :include_blank => false }) %>
    </div>
  </div>
  <div class='form-group'>
    <label class='control-label col-sm-2' for="user_state"><%= _("User's status")%></label>
    <div class='col-sm-4'>
      <select name="user[state]">
        <option value="active" <%= 'selected' if @user.state == 'active' %>><%= _("Active")%></option>
        <option value="inactive" <%= 'selected' if @user.state == 'inactive'%>><%= _("Inactive")%></option>
      </select>
    </div>
  </div>
  <% end %>
</fieldset>

<fieldset class='form-horizontal'>
  <legend><%= _("Profile settings")%></legend>
  <div class='form-group'>
    <label class='control-label col-sm-2' for="user_firstname"><%= _("Firstname") %></label>
    <div class='col-sm-4'>
      <%= text_field('user', 'firstname', {:class => 'form-control'}) %>
    </div>
  </div>
  <div class='form-group'>
    <label class='control-label col-sm-2' for="user_lastname"><%= _("Lastname") %></label>
    <div class='col-sm-4'>
      <%= text_field('user', 'lastname', {:class => 'form-control'}) %>
    </div>
  </div>
  <div class='form-group'>
    <label class='control-label col-sm-2' for="user_nickname"><%= _("Nickname") %></label>
    <div class='col-sm-4'>
      <%= text_field('user', 'nickname', {:class => 'form-control'}) %>
    </div>
  </div>
  <% unless @user.login.nil? %>
  <div class='form-group'>
    <label class='control-label col-sm-2' for="user_name"><%= _("Display Name")%></label>
    <div class='col-sm-4'>
      <select name="user[name]" id="user_name">
        <%= options_for_select(@user.display_names, @user.name) %>
      </select>
    </div>
  </div>
  <% end %>
  <div class='form-group'>
    <label class='control-label col-sm-2' for="text_filter"><%= _("Article filter")%></label>
    <div class='col-sm-4'>
      <select name="user[text_filter_id]" id="text_filter">
        <%= options_for_select text_filter_options_with_id, @user.text_filter.id %>
      </select>
    </div>
  </div>
</fieldset>

<% unless controller.controller_name == 'users'%>
<fieldset class='form-horizontal'>
  <legend><%= _("Avatar") %></legend>
  <p><%= display_user_avatar(current_user, 'thumb') %> <%= _("Your current avatar") %></p>
  <div class='form-group'>
    <label class='control-label col-sm-2' for="avatar"><%= _("Upload your image")%></label>
    <div class='col-sm-4'>
      <%= file_field('user', 'filename', {:class => 'input-file'}) -%>
      <p class='help-block'><%= _("Upload a .jpg, .png or .gif file") %></p>
    </div>
  </div>
</fieldset>
<% end %>

<fieldset class='form-horizontal'>
  <legend><%= _("Notifications")%></legend>
  <div class='form-group'>
    <label class='control-label col-sm-2'><%= _("Notifications") %></label>
    <div class='col-sm-4'>
      <label class='checkbox' for="user_notify_via_email">
        <%= check_box 'user', 'notify_via_email'  %>
        <%= _("Send notification messages via email")%>?
      </label>
      <label class='checkbox' for="user_notify_on_new_articles">
        <%= check_box 'user', 'notify_on_new_articles'  %>
        <%= _("Send notification messages when new articles are posted")%>?
      </label>
      <label class='checkbox' for="user_notify_on_comments">
        <%= check_box 'user', 'notify_on_comments'  %>
        <%= _("Send notification messages when comments are posted")%>?
      </label>
    </div>
  </div>
</fieldset>

<% unless controller.controller_name == 'users'%>

<fieldset class='form-horizontal'>
  <legend><%= _("Publish on Twitter")%></legend>
  <%= twitter_disabled_message(this_blog, current_user) %>
  <div class='form-group'>
    <label class='control-label col-sm-2' for="user_twitter_account"><%= _("Twitter account")%></label>
    <div class='col-sm-4'>
      <%= text_field('user', 'twitter_account', {class: 'form-control', disabled: twitter_available?(this_blog, current_user)}) %>
      <p class='help-block'>The Twitter account you want to post with</p>
    </div>
  </div>
  <div class='form-group'>
    <label class='control-label col-sm-2' for="user_twitter_oauth_token"><%= _("Twitter oauth token")%></label>
    <div class='col-sm-4'>
      <%= text_field('user', 'twitter_oauth_token', {class: 'form-control', disabled: twitter_available?(this_blog, current_user)}) %>
    </div>
  </div>
  <div class='form-group'>
    <label class='control-label col-sm-2' for="user_twitter_oauth_token_secret"><%= _("Twitter oauth secret")%></label>
    <div class='col-sm-4'>
      <%= text_field('user', 'twitter_oauth_token_secret', {class: 'form-control', disabled: twitter_available?(this_blog, current_user)}) %>
    </div>
  </div>
</fieldset>


