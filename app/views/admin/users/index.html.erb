<%- content_for :page_heading do %>  
  <h2>
    <i class="glyphicon glyphicon-large glyphicon-user"></i>
    <%= _("Users") %>
    <%= link_to(_("New User"), {controller: 'users', action: 'new'}, id: 'dialog-link', class: 'btn btn-info pull-right') %>
  </h2>
<% end %>

<table class="table table-hover">
  <thead>
    <tr>
      <th><%= _("Login") %></th>
      <th><%= _("Name") %></th>
      <th><%= _("Email") %></th>
      <th><%= _("Profile") %></th>
      <th><%= _("Articles") %></th>
      <th><%= _("Comments") %></th>
      <th><%= _("State") %></th>
    </tr>
  </thead>
  <% for user in @users -%>
    <tr>
      <td>
        <%= link_to_permalink user, user.login%>
        <div class='action'>
          <%= button_to_edit user%>
          <%= button_to_show user %>
        </div>
      </td>
      <td> <%= user.nickname %></td>
      <td><%= mail_to user.email, user.email%></td>
      <td><%= _(user.profile.nicename) %></td>
      <td><%= Article.where("user_id = #{user.id}").count %></td>
      <td><%= Comment.where("user_id = #{user.id}").count %></td>
      <td><%= _("%s user", _("#{user.state.capitalize}").downcase)%></td>
    </tr>
  <% end -%>
  <%= display_pagination(@users, 7)%>
</table>
